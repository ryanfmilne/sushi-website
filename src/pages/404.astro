---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Page Not Found">
  <div class="bg-stone-100 min-h-[70vh] flex items-center">
    <div class="container mx-auto px-4 py-16 text-center">
      <h1 class="text-6xl font-bold text-amber-600 mb-6">404</h1>
      <h2 class="text-3xl font-semibold mb-4">Page Not Found</h2>
      <p class="text-lg text-stone-600 max-w-lg mx-auto mb-8">
        The page you're looking for doesn't exist or has been moved.
      </p>
      <div class="flex justify-center gap-4">
        <a
          href="/"
          class="bg-amber-600 hover:bg-amber-700 text-white px-6 py-3 rounded-md font-medium transition-colors">
          Go Home
        </a>
        <a
          href="/menu"
          class="bg-white hover:bg-stone-100 text-stone-800 border border-stone-300 px-6 py-3 rounded-md font-medium transition-colors">
          View Menu
        </a>
      </div>
    </div>
  </div>
</Layout>
