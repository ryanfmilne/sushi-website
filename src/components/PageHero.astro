---
// PageHero.astro
// A reusable component for page headers (smaller than the homepage hero)

export interface Props {
  title: string;
  subtitle?: string;
  bgColor?: string;
  textColor?: string;
  paddingY?: string;
}

const {
  title,
  subtitle,
  bgColor = "bg-stone-100",
  textColor = "text-stone-800",
  paddingY = "py-8",
} = Astro.props;
---

<section class={`${bgColor} ${paddingY}`}>
  <div class="container mx-auto px-4">
    <h1 class={`text-3xl md:text-4xl font-bold text-center mb-4 ${textColor}`}>
      {title}
    </h1>
    {
      subtitle && (
        <p class={`text-center ${textColor}/20 max-w-2xl mx-auto mb-2`}>
          {subtitle}
        </p>
      )
    }
    <slot />
  </div>
</section>
